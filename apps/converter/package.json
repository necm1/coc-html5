{
  "name": "@coc/converter",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/converter/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/converter/src/main.ts",
          "tsConfig": "apps/converter/tsconfig.app.json",
          "assets": [
            "apps/converter/src/assets",
            {
              "input": "apps/converter/src/lzham",
              "glob": "**/*",
              "output": "apps/converter/src/lzham"
            }
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            },
            "loader": {
              ".wasm": "file"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              },
              "loader": {
                ".wasm": "file"
              }
            }
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@coc/converter:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@coc/converter:build:development"
          },
          "production": {
            "buildTarget": "@coc/converter:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@mongodb-js/zstd": "^2.0.1",
    "canvas": "^3.1.0",
    "fzstd": "^0.1.1",
    "ktx-parse": "^1.0.0",
    "lzma": "^2.3.2",
    "lzma-native": "^8.0.6",
    "lzma-purejs": "^0.9.3",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "@types/lzma-native": "^4.0.4"
  }
}
